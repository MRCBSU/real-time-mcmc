#!/bin/bash
#SBATCH -J trial_hpc_batch
#SBATCH -A MRC-BSU-SL2-CPU
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=14
#SBATCH --time=36:00:00
#! What types of email messages do you wish to receive?
#SBATCH --mail-type=FAIL
#SBATCH --mail-type=TIME_LIMIT
#SBATCH --mail-type=END
#! Uncomment this to prevent the job from being requeued (e.g. if
#! interrupted by node failure or system downtime):
#SBATCH --no-requeue
#SBATCH --verbose

#SBATCH --array=3,6,9
#SBATCH -p skylake
#SBATCH --qos=covid0


#SBATCH --output=model_runs_20210120regjobs_%a.out
#SBATCH --error=model_runs_20210120regjobs_%a.err

# Navigate to the correct working directory
if [ $SLURM_ARRAY_TASK_ID -lt 4 ]; then
    prev="NoPrev"
    gap=""
    if [ $SLURM_ARRAY_TASK_ID -lt 2 ]; then
	days="28"
    else
	days="60"
    fi
else
    prev="PrevCevik"
    if (( $SLURM_ARRAY_TASK_ID % 2 == 0 )); then
	gap="prev14_"
    else
	gap="prev7_"
    fi
    if [ $SLURM_ARRAY_TASK_ID -lt 6 ]; then
	days="28"
    else
	days="60"
    fi
fi
if (( $SLURM_ARRAY_TASK_ID % 3 == 0 )); then
    geog="ONS"
else
    geog="NHS"
fi
bp="IFRlin.bp_"

workdir="$SLURM_SUBMIT_DIR/model_runs/20210207/${prev}_${bp}${geog}${days}cutoff_11_${gap}matrices_20210205_timeuse_household_deaths"

module load gcc/9 intel/compilers/2020.2

echo $workdir

cd $workdir

if [ -f "posterior_report10" ]; then
    echo "existing output found"
else
  ../../../rtm_hpc
fi
